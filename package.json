{
  "name": "yourtube",
  "version": "1.0.0",
  "description": "Youtube should be productive",
  "main": "index.js",
  "scripts": {
    "lint": "xo && stylelint src/**/*.css",
    "test": "npm run lint && ava && npm run build",
    "build": "webpack --mode=production",
    "watch": "webpack --mode=development --watch",
    "release:cws": "cd dist && webstore upload --auto-publish",
    "release": "run-s build update-version release:cws",
    "update-version": "VERSION=$(utc-version); echo $VERSION; dot-json dist`/manifest.json version $VERSION"
  },
  "dependencies": {
    "ajv": "^6.10.0",
    "dom-chef": "^3.6.0",
    "dom-loaded": "^1.2.0",
    "dompurify": "^1.0.10",
    "element-ready": "^3.0.0",
    "jquery": "^3.4.1",
    "lodash.debounce": "^4.0.8",
    "lodash.groupby": "^4.6.0",
    "lodash.pick": "^4.4.0",
    "lodash.sortby": "^4.7.0",
    "prismjs": "^1.27.0",
    "select-dom": "^5.1.0",
    "webext-options-sync": "^0.16.0",
    "webextension-polyfill": "^0.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-transform-react-jsx": "^7.3.0",
    "@babel/register": "^7.4.4",
    "ava": "^6.1.3",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.6",
    "chrome-webstore-upload-cli": "^1.1.1",
    "copy-webpack-plugin": "^5.0.3",
    "dot-json": "^1.1.0",
    "npm-run-all": "^4.1.1",
    "size-plugin": "^1.2.0",
    "stylelint": "^16.8.1",
    "stylelint-config-xo": "^0.15.0",
    "utc-version": "^1.0.0",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4",
    "xo": "^0.59.3"
  },
  "xo": {
    "parser": "babel-eslint",
    "envs": [
      "browser",
      "jquery"
    ],
    "rules": {
      "import/no-unassigned-import": 0,
      "no-unused-vars": [
        2,
        {
          "varsIgnorePattern": "^h$"
        }
      ]
    },
    "globals": [
      "browser"
    ],
    "space": 4
  },
  "ava": {
    "files": [
      "test/*.js"
    ],
    "require": [
      "@babel/register"
    ]
  },
  "babel": {
    "plugins": [
      [
        "@babel/plugin-transform-react-jsx",
        {
          "pragma": "h",
          "useBuiltIns": true
        }
      ]
    ]
  },
  "stylelint": {
    "extends": "stylelint-config-xo",
    "rules": {
      "declaration-no-important": null,
      "selector-class-pattern": null,
      "indentation": [
        4
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gurrrung/YourTube.git"
  },
  "keywords": [
    "chrome-extension"
  ],
  "author": "Rahul Gurung",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gurrrung/YourTube/issues"
  },
  "homepage": "https://github.com/gurrrung/YourTube#readme"
}
